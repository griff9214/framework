{% extends("layout/default.html.twig") %}
{% block title %}{{ post.title|escape }}{% endblock %}

{% block meta %}
    <meta name="description" content="{{ post.title|escape }}"/>
{% endblock %}

{% block breadcrumbs %}
    <ul class="breadcrumb">
        <li><a href="{{ path('home') }}">Home</a></li>
        <li><a href="{{ path('blog-index') }}">Blog</a></li>
        <li class="active">{{ post.title|escape }}</li>
    </ul>
{% endblock %}

{% block content %}

    <h1>{{ post.title|escape }}</h1>

    <div class="panel panel-default">
        <div class="panel-heading">
            {{ post.date|date('Y-m-d') }}
        </div>
        <div class="panel-body">{{ post.content|escape }}</div>
    </div>

{% endblock %}
